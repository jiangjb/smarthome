<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

	<session-factory>
		<property name="show_sql">false</property>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="default_schema">kinconybackstage</property>
		<property name="autocommit">false</property>
		<property name="release_mode">after_transaction</property>
		<property name="autoReconnect">true</property>
		<property name="order_updates">true</property>
		<property name="cache.use_query_cache">false</property>
		<!-- 开启二级缓存 -->
		<property name="cache.use_second_level_cache">true</property>
		<property name="current_session_context_class">
			org.springframework.orm.hibernate4.SpringSessionContext
		</property>	
		<property name="cache.region.factory_class">
			org.hibernate.cache.EhCacheRegionFactory
		</property> 
		<property name="cache.provider_class">org.cache.EhCacheProvider</property>
		<!-- 是否使用查询缓存 -->
		<property name="hibernate.cache.use_query_cache">true</property>
	
		<!-- 设置缓存类 -->
		 <property name="cache.provider_class">com.googlecode.memcached.MemcachedCacheProvider</property>  
		<!-- 设置memcache缓存服务器端口 -->
		<property name="memcached.servers">localhost:8080</property>  
		<!-- 设置二级缓存的前缀名称 -->
		 <property name="cache.region_prefix">quality.cache.ehcache</property>  
		<!-- 否使用结构化的方式缓存对象 --> 
		 <property name="cache.use_structured_entries">true</property>  
		<!-- 是否缓存查询结果 -->
		<property name="cache.use_query_cache">true</property>  
		
		<!-- 加载hibernate.cfg.xml时，创建新表（如果原来存在，先删除） -->
		<!-- <property name="hibernate.hbm2ddl.auto">create</property>   -->
		<!-- 加载hibernate.cfg.xml时，更新表结构（如果原表不存在，就创建新表 -->
		<!-- <property name="hibernate.hbm2ddl.auto">update</property>    -->
	</session-factory>

</hibernate-configuration>